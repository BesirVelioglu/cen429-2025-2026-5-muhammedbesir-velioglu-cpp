#include "../header/LocalSports.h"
#include <stdexcept>

using namespace Coruh::LocalSports;

double LocalSports::add(double a, double b) {
    return a + b;
}

double LocalSports::subtract(double a, double b) {
    return a - b;
}

double LocalSports::multiply(double a, double b) {
    return a * b;
}

double LocalSports::divide(double a, double b) {
    if (b == 0) {
        throw std::invalid_argument("Division by zero is not allowed.");
    }
    return a / b;
}